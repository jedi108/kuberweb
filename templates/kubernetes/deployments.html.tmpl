<div class="container">
    <div class="row">
        <div class="jumbotron bg-dark text-white">
            <h1>Deployments</h1>
        </div>

        {{range .PageSysContent.AlertDanger.TextAlert}}
            <div class="alert alert-danger">
            {{.}}
            </div>
        {{end}}


        {{range .PageSysContent.AlertSuccess.TextAlert}}
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{.}}
            </div>
        {{end}}


        <form action="/_my/kubernetes/deployments" class="z" role="scale" method="post">

            <div class="table-responsive">
                <table id="sortabletable" class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <th>Deployments</th>
                        <th>Pods</th>
                        <th>scale</th>
                    </tr>
                    </thead>
                {{range .Deps.Deployments}}
                    <tr>
                        <td class="col-md-6">
                        {{.ObjectMeta.Name}}
                        </td>

                        <td class="col-md-3">
                        {{.Pods.Current}}
                        </td>

                        <td class="col-md-3">
                            <div class="col-md-5 col-lg-5">
                                <input type="text" class="form-control" placeholder="Scale" name="{{.ObjectMeta.Name}}">
                            </div>
                            <div class="col-md-4 col-lg-4">
                                <button type="submit" class="btn btn-default">Отправить</button>
                            </div>
                        </td>
                    </tr>
                {{end}}
                </table>
            </div>

        </form>

    </div>
</div>
{{end}}