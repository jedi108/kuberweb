{{define "content"}}

<div class="container">
    <div class="row">
        <div class="jumbotron bg-dark text-white">
            <h1>Redis</h1>
        </div>

        {{range .PageSysContent.AlertDanger.TextAlert}}
            <div class="alert alert-danger">
            {{.}}
            </div>
        {{end}}


        {{range .PageSysContent.AlertSuccess.TextAlert}}
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{.}}
            </div>
        {{end}}


        <form action="/redis/list" class="z" role="scale" method="post">

            <div>
                <button type="submit" class="btn btn-default">Очистить кеш</button>
            </div>

            <div class="table-responsive">
                <table id="sortabletable" class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <th>Server</th>
                        <th>Db size</th>
                        <th>info</th>
                    </tr>
                    </thead>
                {{range .RedisInfos.RedisInfos}}
                    <tr>
                        <td class="col-md-6">
                        {{.Names}}
                        </td>

                        <td class="col-md-3">
                        {{.Res}}
                        </td>

                        <td class="col-md-3">
                        {{.Err}}
                        </td>

                    </tr>
                {{end}}
                </table>
            </div>

        </form>

    </div>
</div>
{{end}}